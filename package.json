{
  "name": "crud-demo-site",
  "version": "1.0.0",
  "engines": {
    "node": "18.16.0",
    "npm": "9.5.1"
  },
  "scripts": {
    "install-reactjs": "npm install --prefix reactjs --only=prod",
    "install-api": "npm install --prefix api",
    "build-reactjs": "npm run build --prefix reactjs",
    "heroku-prebuild": "npm run install-reactjs && npm run install-api",
    "heroku-postbuild": "concurrently \"npm run build-reactjs\" \"npm run install-api\"",
    "start": "npm start --prefix api",
    "dev:react": "concurrently \"npm run api\" \"npm run react\"",
    "react": "cd reactjs && npm run start",
    "api": "cd api && nodemon server.js"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  }
}
